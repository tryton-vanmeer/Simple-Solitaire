<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/games_Canfield">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="3"
            android:entries="@array/pref_draw_titles"
            android:entryValues="@array/pref_draw_values"
            android:key="@string/pref_key_canfield_draw"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_canfield_draw" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_FortyEight">
        <CheckBoxPreference
            android:defaultValue="@bool/default_fortyeight_limited_recycles"
            android:key="@string/pref_key_fortyeight_limit_recycles"
            android:summary="@string/settings_limit_number_of_recycles_text"
            android:title="@string/settings_limit_number_of_recycles" />

        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:dependency="@string/pref_key_fortyeight_limit_recycles"
            android:defaultValue="@string/default_fortyeight_number_of_recycles"
            android:entries="@array/pref_number_of_recycles_values"
            android:entryValues="@array/pref_number_of_recycles_values"
            android:key="@string/pref_key_fortyeight_number_of_recycles"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_number_of_recycles" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Golf">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_golf_cyclic"
            android:summary="@string/settings_golf_easy_description"
            android:title="@string/settings_golf_easy" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Klondike">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="1"
            android:entries="@array/pref_draw_titles"
            android:entryValues="@array/pref_draw_values"
            android:key="@string/pref_key_klondike_draw"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_klondike_draw" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Pyramid">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="1"
            android:entries="@array/pref_pyramid_difficulty_titles"
            android:entryValues="@array/pref_pyramid_difficulty_values"
            android:key="@string/pref_key_pyramid_difficulty"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_pyramid_difficulty" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_pyramid_limited_recycles"
            android:key="@string/pref_key_pyramid_limit_recycles"
            android:summary="@string/settings_limit_number_of_recycles_text"
            android:title="@string/settings_limit_number_of_recycles" />

        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:dependency="@string/pref_key_pyramid_limit_recycles"
            android:defaultValue="@string/default_pyramid_number_of_recycles"
            android:entries="@array/pref_number_of_recycles_values"
            android:entryValues="@array/pref_number_of_recycles_values"
            android:key="@string/pref_key_pyramid_number_of_recycles"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_number_of_recycles" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Spider">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="1"
            android:entries="@array/pref_spider_difficulty_titles"
            android:entryValues="@array/pref_spider_difficulty_values"
            android:key="@string/pref_key_spider_difficulty"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_spider_difficulty" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Vegas">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="3"
            android:entries="@array/pref_draw_titles"
            android:entryValues="@array/pref_draw_values"
            android:key="@string/pref_key_vegas_draw"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_klondike_draw" />

        <de.tobiasbielefeld.solitaire.dialogs.DialogPreferenceVegasBetAmount
            android:key="@string/pref_key_vegas_bet_amount"
            android:title="@string/settings_vegas_bet_amount"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@string/game_confirm"
            android:summary=""/>

        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="@string/default_vegas_number_of_recycles"
            android:entries="@array/pref_number_of_recycles_values"
            android:entryValues="@array/pref_number_of_recycles_values"
            android:key="@string/pref_key_vegas_number_of_recycles"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_number_of_recycles" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_vegas_money_enabled"
            android:key="@string/pref_key_vegas_money_enabled"
            android:summary="@string/settings_vegas_money_enabled_text"
            android:title="@string/settings_vegas_money_enabled" />

        <de.tobiasbielefeld.solitaire.dialogs.DialogPreferenceVegasResetMoney
            android:key="@string/pref_key_vegas_reset_money"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@string/game_confirm"
            android:summary="@string/settings_vegas_money_reset_text"
            android:title="@string/settings_vegas_money_reset" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/games_Yukon">
        <de.tobiasbielefeld.solitaire.classes.ListPreferenceWithSummary
            android:defaultValue="default"
            android:entries="@array/pref_yukon_rules_titles"
            android:entryValues="@array/pref_yukon_rules_values"
            android:key="@string/pref_key_yukon_rules"
            android:negativeButtonText="@string/game_cancel"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/settings_yukon_rules" />
    </PreferenceCategory>

</PreferenceScreen>